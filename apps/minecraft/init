MEMORY=${MEMORY:-"512"}
OP=${OP:-"maxexcloo"}
VERSION=${VERSION:-"1.7.9"}
if [ ! "$(ls -A /data)" ]; then
	echo "$OP" > /data/ops.txt
	echo "$OP" > /data/white-list.txt
	wget -O /data/minecraft_server.jar https://s3.amazonaws.com/Minecraft.Download/versions/$VERSION/minecraft_server.$VERSION.jar 
fi
chown -R minecraft:minecraft /data
sed -i "s/512/$MEMORY/g" /etc/supervisor/conf.d/minecraft.conf
